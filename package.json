
{
  "name": "dnd-player-companion",
  "version": "1.4.0",
  "description": "DND Player Companion Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64"
  },
  "author": "DND Senior Engineer",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.dnd.companion",
    "productName": "DNDPlayerCompanion",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "artifactName": "${productName}_v${version}_Portable.${ext}"
    }
  }
}
